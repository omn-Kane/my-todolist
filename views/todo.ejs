<!DOCTYPE html>

<html>
    <head>
        <title>My todolist</title>
        <style>
            a {text-decoration: none; color: black;}
        </style>
    </head>

    <body>
        <h1>My todolist</h1>
        <ul>
        <% todolist.forEach(function(todo, index) { %>
            <li>
                <form action="/todo/edit/<%= index %>" method="post">
                    <a href="/todo/delete/<%= index %>">âœ˜</a>
                    <span><%- todo %></span>
                    <input type="text" name="edittodo-<%= index %>" id="edittodo-<%= index %>" placeholder="Update Value"/>
                    <input type="submit" value="Update"/>
                </form>
            </li>
        <% }); %>
        </ul>

        <form action="/todo/add/" method="post">
            <p>
                <label for="newtodo">What should I do?</label>
                <input type="text" name="newtodo" id="newtodo" autofocus />
                <input type="submit" />
            </p>
        </form>
    </body>
</html>
